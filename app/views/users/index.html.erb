
<!DOCTYPE html>
<html>
<head>
  <title>Platform Blog Posts</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>  
</head>
<body>
    <section class="users_list">
    <h1>The Users List</h1>
    <% @users.each do |user| %>
      <div class="users">
     <div class="user_image">
     <img src="#{@users.photo}" alt="user image" />
     </div> 
     <div class="info">
         <a href=<%= "/users/#{user.id}" =%> >
         <p class="user_name"> <%= user.name %> </p>
         <span class="number_posts"> Number of posts : <%= user.posts_counter %> <span>
     </div>
     </div>
     </a>
     <% end %>
     </section>
</body>
</html>